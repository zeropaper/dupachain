{
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the evaluation"
    },
    "rootDir": {
      "type": "string",
      "description": "Root directory of the eval"
    },
    "prompts": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Paths to prompt files"
    },
    "runners": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "Path to runner file"
          },
          "tools": {
            "type": "object",
            "properties": {
              "loaders": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "File paths to tool loaders"
              },
              "enabled": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Names of tools to enable"
              }
            },
            "required": [
              "loaders",
              "enabled"
            ],
            "additionalProperties": false,
            "default": {
              "loaders": [],
              "enabled": []
            }
          },
          "modelName": {
            "type": "string",
            "enum": [
              "gpt-3.5-turbo-1106",
              "gpt-4-1106-preview",
              "gpt-4-0314"
            ],
            "default": "gpt-3.5-turbo-1106",
            "description": "Model name to use"
          }
        },
        "required": [
          "path"
        ],
        "additionalProperties": false
      }
    },
    "personas": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string",
            "description": "Path to persona file"
          },
          {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the persona"
              },
              "profile": {
                "type": "string",
                "description": "Some instructions on how the tester should behave"
              },
              "firstMessage": {
                "type": "string",
                "default": "Hi!",
                "description": "First message to send"
              },
              "goal": {
                "anyOf": [
                  {
                    "type": "string",
                    "description": "An instruction prompt to use for yes/no question, the context will be the last AI message"
                  },
                  {
                    "type": "array",
                    "items": {
                      "anyOf": [
                        {
                          "type": "object",
                          "properties": {
                            "type": {
                              "type": "string",
                              "const": "text",
                              "description": "Text goal"
                            },
                            "text": {
                              "type": "string",
                              "description": "Text to match"
                            },
                            "exact": {
                              "type": "boolean",
                              "default": false,
                              "description": "Whether to match exactly"
                            }
                          },
                          "required": [
                            "type",
                            "text"
                          ],
                          "additionalProperties": false
                        },
                        {
                          "type": "object",
                          "properties": {
                            "type": {
                              "type": "string",
                              "const": "regex",
                              "description": "Regex goal"
                            },
                            "regex": {
                              "type": "string",
                              "description": "Regex to match"
                            }
                          },
                          "required": [
                            "type",
                            "regex"
                          ],
                          "additionalProperties": false
                        }
                      ]
                    }
                  }
                ],
                "description": "An instruction prompt to use for yes/no question, the context will be the last AI message"
              },
              "maxCalls": {
                "type": "integer",
                "exclusiveMinimum": 0,
                "default": 10
              }
            },
            "required": [
              "name",
              "profile"
            ],
            "additionalProperties": false,
            "description": "Persona object"
          }
        ],
        "description": "Path to persona file"
      },
      "description": "An array of either file paths to YAML files or persona objects"
    }
  },
  "required": [
    "name",
    "prompts",
    "runners",
    "personas"
  ],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}